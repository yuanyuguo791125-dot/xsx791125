
/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0;
  margin: 0;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-primary {
  color: #3b82f6;
}

.text-secondary {
  color: #6b7280;
}

.text-danger {
  color: #ef4444;
}

.text-success {
  color: #10b981;
}

.text-warning {
  color: #f59e0b;
}

.text-white {
  color: #ffffff;
}

.bg-white {
  background-color: #ffffff;
}

.bg-primary {
  background-color: #3b82f6;
}

.bg-secondary {
  background-color: #f3f4f6;
}

.bg-danger {
  background-color: #ef4444;
}

.bg-success {
  background-color: #10b981;
}

.bg-warning {
  background-color: #f59e0b;
}

.rounded {
  border-radius: 8rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-full {
  border-radius: 50%;
}

.shadow {
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.p-2 {
  padding: 16rpx;
}

.p-4 {
  padding: 32rpx;
}

.p-6 {
  padding: 48rpx;
}

.m-2 {
  margin: 16rpx;
}

.m-4 {
  margin: 32rpx;
}

.m-6 {
  margin: 48rpx;
}

.mt-2 {
  margin-top: 16rpx;
}

.mt-4 {
  margin-top: 32rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mb-4 {
  margin-bottom: 32rpx;
}

.ml-2 {
  margin-left: 16rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

.text-2xl {
  font-size: 48rpx;
}

.font-bold {
  font-weight: bold;
}

.font-semibold {
  font-weight: 600;
}

.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

.hidden {
  display: none;
}

.block {
  display: block;
}

.inline-block {
  display: inline-block;
}

.border {
  border: 1rpx solid #e5e7eb;
}

.border-t {
  border-top: 1rpx solid #e5e7eb;
}

.border-b {
  border-bottom: 1rpx solid #e5e7eb;
}

.border-l {
  border-left: 1rpx solid #e5e7eb;
}

.border-r {
  border-right: 1rpx solid #e5e7eb;
}

/* 按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: #3b82f6;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #374151;
}

.btn-danger {
  background-color: #ef4444;
  color: #ffffff;
}

.btn-success {
  background-color: #10b981;
  color: #ffffff;
}

.btn-warning {
  background-color: #f59e0b;
  color: #ffffff;
}

.btn-outline {
  background-color: transparent;
  border: 1rpx solid #d1d5db;
  color: #374151;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}

.btn-large {
  padding: 28rpx 56rpx;
  font-size: 36rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.card-body {
  padding: 32rpx;
}

.card-footer {
  padding: 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  color: #6b7280;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #9ca3af;
  font-size: 28rpx;
}

/* 网格布局 */
.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-cols-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-cols-4 {
  grid-template-columns: repeat(4, 1fr);
}

.gap-2 {
  gap: 16rpx;
}

.gap-4 {
  gap: 32rpx;
}
